@import url(https://fonts.googleapis.com/css?family=Roboto:400,700)
::-webkit-scrollbar
	width: 12px
	height: 12px

::-webkit-scrollbar-track
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3)
	border-radius: 10px

::-webkit-scrollbar-thumb
	background: #444F55
	border-radius: 10px
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5)

$good-color = #07B085
$bad-color = #DD5145
$default-light-color = #CFDDE3
$default-mid-light-color = darken($default-light-color, 30%)
$default-medium-color = #333e44
$default-mid-dark-color = darken($default-medium-color, 30%)
$default-dark-color = #20272B

input
	outline: none
	border: 1px solid $default-mid-dark-color

	&:focus
		border-color: $good-color

button
	padding: 0px
	border: none
	cursor:pointer

	&:active
		box-shadow: 1px 1px 1px $default-dark-color

	&:focus
		outline: none
		border: none

body
	font-family: 'Roboto', sans-serif
	padding: 0
	margin: 0

	p
		margin: 0
		padding: 0

#statusboard
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	background-color: $default-dark-color

	#main-wrapper
		transition: all 0.3s ease
		background-color: $default-dark-color
		height: 100%;
		overflow-y: auto

		#header
			position: relative
			background-color: $good-color
			height: 70px

			.title
				position: absolute
				top: 0
				left: 0
				right: 0
				line-height: 70px
				letter-spacing: 3px
				font-size: 36px
				color: $default-light-color
				text-align: center
				pointer-events: none
				user-select: none

			// Sara no touchy this is only not centered until we do the
			// actual icons for these
			button
				float: right
				margin: 5px
				height: 60px
				width: 60px
				font-size: 48px
				background: $good-color
				color: $default-light-color

				&:hover
					background: darken($good-color, 20%)
				// Sara: this svg is seriously so bad right now, and needs to be re-done
				img
					position: relative
					width: 50px
					height: 100%
			

		#servers-container
			position: relative
			margin: 0 auto
			width: 80%
			min-width: 800px
			max-width: 1350px
			text-align: center

			@media (max-width: 800px)
				width: 100%
				min-width: 100%

				.server-wrapper
					width: 100%
					max-width: 100%
					min-width: 400px

			#filters
				width: 50%
				max-width: 670px
				color: $default-light-color
				margin: 0 auto
				margin-top: 20px
				margin-bottom: 10px
				border: 1px solid $default-light-color
				text-align: center

				.filter-entrance
					pointer-events: initial
					padding: 10px
					cursor: pointer
					transition: background-color 0.4s ease

					&:hover
						background-color: $good-color

				.filtering-groups-selector
					display: flex

					.filtering-group
						flex: 1 1 auto
						text-transform: uppercase
						outline: 1px solid $default-light-color
						user-select: none
						padding: 10px
						cursor: pointer
						transition: background-color 0.4s ease

						&:hover
							background-color: $good-color

						&.active
							background: $good-color

					.reset-filters-button
						flex: 0 0 auto
						padding: 5px
						line-height: 28px
						font-size: 16px
						outline: 1px solid $default-light-color
						cursor: pointer
						transition: background-color 0.4s ease

						&:hover
							background-color: $bad-color

				.filter-group
					display: inline-block
					margin: 10px
					display: flex
					overflow-x: auto

					.filter-item
						flex: 1 1 auto
						margin: 4px
						padding: 5px
						background-color: $default-medium-color
						color: $default-light-color
						text-transform: uppercase
						cursor: pointer
						user-select: none

						&.active
							color: $good-color

			.server-wrapper
				display: inline-block
				position: relative
				background-color: $default-medium-color
				margin: 15px
				padding: 10px
				width: 330px
				height: 180px 
				transition: 0.5s ease
				overflow-y: auto
				overflow-x: hidden
				text-align: center

				.server-body
					position: relative
					margin-left: 35px
					height: 100%
					color: $default-light-color
					text-align: left

					.server-header
						position: relative
						border-bottom: 1px solid $default-light-color
						margin-bottom: 12px
						height: 20px
						padding-bottom: 3px

						.server-button
							cursor: pointer
							position: absolute
							top: -5px
							width: 15px
							height: 15px
							z-index: 100
							line-height: 20px
							text-align: center
							font-size: 16pt
							transition: all 0.3s auto
					
							&:hover
								font-size: 20pt
				
						.delete-server-button
							right: 0
							color: $bad-color

						.server-name
							text-transform: uppercase
							font-size: 16pt
							cursor: pointer

							&:hover
								color: $good-color

						.minor
							font-weight: 500
							font-size: 11pt

					.server-attr
						textarea
							background-color: $default-medium-color
							resize: none
							overflow: auto
							height: 66px
							width: 95%
							margin-top: 2px
							margin-left: -2px
							padding-left: 5px
							border: none
							color: $default-light-color

							&:focus
								border-left: 1px solid $default-mid-light-color
								outline: none
								padding-left: 4px

						&.version-info
							position: absolute
							bottom: 0
							left: 0
							right: 0

					.attr-name
						font-weight: 600
						font-size: 12pt

					.attr, textarea
						font-size: 11pt

					p, a
						display: inline-block
						margin-top: 0px
						white-space: pre
						line-height: 12pt
						padding: 3px 0px
						max-width: 100%

						&.list
							display: block
							margin-left: 10px

					a
						color: $good-color
						cursor: pointer

						&:hover
							text-decoration: underline

					input
						background-color: $default-medium-color
						color: $default-light-color
						border: none
						font-weight: normal
						width: 190px
				.expand-toggle
					position: absolute
					left: 0
					top: 0
					height: 100%
					width: 20px
					background-color: #0088CC
					color: white
					cursor: pointer
					user-select: none

					&.good
						background-color: $good-color

					&.bad
						background-color: $bad-color

					.control-button
						margin: 5px

				&.active
					height: auto
					min-height: 150px
					overflow: hidden

					.server-attr.version-info
						position: initial

	#modal
		position: fixed;
		width: 50%
		top: 50%
		left: 50%
		margin: -10% 0 0 -25%
		transition: all 0.5s ease
		transform: scale(1.5)
		opacity: 0
		pointer-events: none

		.new-server
			position: relative
			background-color: $default-dark-color
			border-radius: 4px
			border: 2px solid $good-color
			padding: 15px

			.close-button
				cursor: pointer
				position: absolute
				top: 0
				right: 0
				margin: 15px
				width: 24px
				height: 24px
				line-height: 24px
				text-align: center
				font-size: 16pt
				background-color: $default-medium-color
				color: $default-light-color

			form
				width: 80%

				.input-container
					height: 30px
					margin-bottom: 5px

					label
						color: $default-light-color

					input
						float: right
						width: 180px
						padding: 5px

					input[type=text]
						background: $default-medium-color
						color: $default-light-color

					input[type=submit]
						border-radius: 5px
						margin: 5px
						background-color: $default-medium-color
						color: $default-light-color
						cursor: pointer
						border: none
		
	&.modal-active
		#main-wrapper
			filter: blur(5px) grayscale(50%)
		#modal
			transform: scale(1)
			opacity: 1
			pointer-events: auto
